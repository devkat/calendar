{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src/",
    "sourceMap": true,
    "target": "es6",
    "module": "system",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages"
  ]
}